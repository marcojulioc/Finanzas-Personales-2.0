generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum AccountType {
  savings
  checking
}

enum Currency {
  MXN
  USD
}

enum TransactionType {
  income
  expense
}

enum RecurringFrequency {
  daily
  weekly
  biweekly
  monthly
  yearly
}

enum NotificationType {
  budget_exceeded
  budget_warning
  card_cutoff
  card_payment
  recurring_upcoming
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
model User {
  id                  String        @id @default(cuid())
  email               String        @unique
  name                String
  password            String?
  image               String?
  emailVerified       DateTime?
  onboardingCompleted Boolean       @default(false)

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // App relations
  bankAccounts BankAccount[]
  creditCards  CreditCard[]
  transactions Transaction[]
  budgets Budget[]
  recurringTransactions RecurringTransaction[]
  notifications Notification[]
  categories Category[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model BankAccount {
  id          String      @id @default(cuid())
  userId      String
  name        String      @db.VarChar(50)
  bankName    String      @db.VarChar(50)
  accountType AccountType
  currency    Currency
  balance     Decimal     @db.Decimal(12, 2)
  color       String?     @db.VarChar(7)
  isActive    Boolean     @default(true)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  recurringTransactions RecurringTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model CreditCard {
  id            String  @id @default(cuid())
  userId        String
  name          String  @db.VarChar(50)
  bankName      String  @db.VarChar(50)
  cutOffDay     Int     @db.SmallInt
  paymentDueDay Int     @db.SmallInt
  limitMXN      Decimal @db.Decimal(12, 2)
  limitUSD      Decimal @db.Decimal(12, 2)
  balanceMXN    Decimal @db.Decimal(12, 2)
  balanceUSD    Decimal @db.Decimal(12, 2)
  color         String? @db.VarChar(7)
  isActive      Boolean @default(true)

  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions     Transaction[] @relation("CardTransactions")
  paymentsReceived Transaction[] @relation("CardPayments")
  recurringTransactions RecurringTransaction[] @relation("RecurringCardTransactions")
  recurringPayments     RecurringTransaction[] @relation("RecurringCardPayments")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Transaction {
  id          String          @id @default(cuid())
  userId      String
  type        TransactionType
  amount      Decimal         @db.Decimal(12, 2)
  currency    Currency
  category    String          @db.VarChar(30)
  description String?         @db.VarChar(100)
  date        DateTime        @db.Date

  // Relación con cuenta bancaria (opcional)
  bankAccountId String?
  bankAccount   BankAccount? @relation(fields: [bankAccountId], references: [id])

  // Relación con tarjeta de crédito (opcional)
  creditCardId String?
  creditCard   CreditCard? @relation("CardTransactions", fields: [creditCardId], references: [id])

  // Para pagos de tarjeta
  isCardPayment Boolean     @default(false)
  targetCardId  String?
  targetCard    CreditCard? @relation("CardPayments", fields: [targetCardId], references: [id])

  // Para transacciones generadas automáticamente
  recurringTransactionId String?
  recurringTransaction   RecurringTransaction? @relation("GeneratedFromRecurring", fields: [recurringTransactionId], references: [id])

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
  @@index([bankAccountId])
  @@index([creditCardId])
  @@index([recurringTransactionId])
}

// Nuevo modelo para Presupuestos
model Budget {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  category  String   // Ej: "Alimentación", "Transporte"
  amount    Decimal  @db.Decimal(12, 2) // Límite del presupuesto
  
  // Para esta primera versión, todos los presupuestos serán mensuales
  // Representamos el mes como el primer día de ese mes.
  // Ej: '2026-02-01' para el presupuesto de Febrero 2026.
  month     DateTime @db.Date 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Un usuario solo puede tener un presupuesto por categoría y mes
  @@unique([userId, category, month])
  @@index([userId])
}

model RecurringTransaction {
  id                String              @id @default(cuid())
  userId            String

  // Campos de transacción (igual que Transaction)
  type              TransactionType
  amount            Decimal             @db.Decimal(12, 2)
  currency          Currency
  category          String              @db.VarChar(30)
  description       String?             @db.VarChar(100)
  bankAccountId     String?
  creditCardId      String?
  isCardPayment     Boolean             @default(false)
  targetCardId      String?

  // Campos específicos de recurrencia
  frequency         RecurringFrequency
  startDate         DateTime            @db.Date
  endDate           DateTime?           @db.Date
  lastGeneratedDate DateTime?           @db.Date
  nextDueDate       DateTime            @db.Date
  isActive          Boolean             @default(true)

  // Relaciones
  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount       BankAccount?        @relation(fields: [bankAccountId], references: [id])
  creditCard        CreditCard?         @relation("RecurringCardTransactions", fields: [creditCardId], references: [id])
  targetCard        CreditCard?         @relation("RecurringCardPayments", fields: [targetCardId], references: [id])
  generatedTransactions Transaction[]   @relation("GeneratedFromRecurring")

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([userId, isActive])
  @@index([userId, nextDueDate])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String           @db.VarChar(100)
  message   String           @db.VarChar(255)
  isRead    Boolean          @default(false)
  data      Json?            // Metadata adicional (budgetId, cardId, etc.)

  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime         @default(now())

  @@index([userId, isRead])
  @@index([userId, createdAt])
}

model Category {
  id        String          @id @default(cuid())
  userId    String
  name      String          @db.VarChar(30)
  icon      String          @db.VarChar(10)
  color     String          @db.VarChar(7)
  type      TransactionType
  isDefault Boolean         @default(false) // Categorias del sistema
  isActive  Boolean         @default(true)

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@unique([userId, name, type])
  @@index([userId, type, isActive])
}
